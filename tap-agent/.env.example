# TAP Agent Environment Variables
# Copy this file to .env and update values for your environment

# Merchant API Configuration
MERCHANT_API_URL=http://localhost:8000

# Agent Configuration
AGENT_PORT=8501

# Debug Configuration
DEBUG=true

# RSA Key Pair for HTTP Message Signatures (RFC 9421)
# Generate keys using: python3 generate_keys.py
# RSA keys are in PEM format with newlines escaped as \n
RSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
RSA_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----\n"

# Ed25519 Key Pair for HTTP Message Signatures (RFC 9421)
# Generate keys using: python3 generate_keys.py
# Ed25519 keys are base64-encoded raw 32-byte keys (no PEM headers)
ED25519_PRIVATE_KEY="base64_encoded_32_byte_private_key"
ED25519_PUBLIC_KEY="base64_encoded_32_byte_public_key"
